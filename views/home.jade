extends layout

block content
  #titlebar Geolocated Sentiment Analysis
    input(placeholder="#SELFIE")

  #mapwrap.content
    #map

      svg(id="canvas", height="100%", width="100%" z-index="1")
        defs
          radialGradient(id="dotgradient")
            stop(offset="30%", stop-color="white", stop-opacity="1")
            stop(offset="100%", stop-color="white" stop-opacity="0")
          
          mask(id="dotmask")
            circle(cx="0",cy="0",r="10", fill="url(#dotgradient)")
  
  #arrowWrap
    svg(id="arrows")
      polygon(points="0,0 50,0 25,50", fill="rgba(255,255,255,.5)")
  
  #description
    .content
      h1.heading About This Project
      p.text
        | Here is some content about this project.
